#! /usr/bin/env node

require("dotenv").config();
const args = process.argv.slice(2);

const { run } = require("../lib/runner");
if (args[0] === "test") {
  return run("local", null, process.cwd());
} else if (args[0] === "deploy") {
  return run("production", "docker-local", process.cwd());
} else {
  throw new Error("Invalid daft-func command");
}
