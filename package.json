{
  "name": "@meroxa/turbine-js",
  "license": "SEE LICENSE IN LICENSE.MD",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "prettier": "2.8.4",
    "turbo": "^1.6.3"
  },
  "scripts": {
    "build:dev": "npx turbo build:dev",
    "packages": "npm install -w packages",
    "local:meroxa-js": "npm link @meroxa/meroxa-js -w packages/turbine-js-cli",
    "prettier:check": "prettier --check 'packages/**/*.{js,ts,json}'",
    "prettier:makeitpretty": "prettier --write 'packages/**/*.{js,ts,json}'",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage && ./scripts/test-coverage.sh",
    "version": "changeset version && npm install -w=packages",
    "release": "turbo run build:prod && changeset publish"
  }
}
